generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database_prisma.sqlite"
}

model Pokemon {
  id         Int          @id @default(autoincrement())
  name       String
  created_at DateTime     @default(now())
  types      Type[]       @relation("PokemonTypes")

  @@map("pokemons")
}

model Type {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  created_at DateTime    @default(now())
  pokemons   Pokemon[]   @relation("PokemonTypes")

  @@map("types")
}